                            RoId = r.GetString(1),
                            Identificador = r.GetString(2),
                            Titulo = r.IsDBNull(3) ? null : r.GetString(3),
                            Ordem = r.GetInt32(4)
                        };
                    }
                    else
                    {
                        // fallback para objeto vazio se realmente n√£o existir
                        storyObj = new { };
                    }
                }

                await transaction.CommitAsync();

                // Use nome totalmente qualificado para evitar conflito entre Newtonsoft e System.Text.Json
                var json = System.Text.Json.JsonSerializer.Serialize(
                    new
                    {
                        command = "roElementAction",
                        Programa = roId,
                        Story = storyObj
                    },
                    new System.Text.Json.JsonSerializerOptions
                    {
                        WriteIndented = false, // mude para true se quiser leg√≠vel no log
                        DefaultIgnoreCondition = System.Text.Json.Serialization.JsonIgnoreCondition.WhenWritingNull
                    }
                );

                return json;
            }
            catch (Exception ex)
            {
                await transaction.RollbackAsync();
                Console.WriteLine("sql error: " + ex.Message);
                throw;
            }
        }

